<Window x:Class="WorkersData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkersData"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel Background="#FF7C6666" VerticalAlignment="Stretch" Height="auto">
            <DockPanel Background="#FF555353" HorizontalAlignment="Left" Width="250"
                       AutomationProperties.Name="pnlBranch" VerticalAlignment="Stretch" Height="500">
                <TextBlock Text="BRANCH" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="18"/>
            </DockPanel>
        </StackPanel>

    </Grid>
</Window>
